<h1>All Posts</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Image</th>
            <th>Title</th>
            <th>Status</th>
            <th>Allow Comments</th>
        </tr>
    </thead>
    <tbody>
        {{#each posts}}
            <tr>
                <td>{{id}}</td>
                <td><img height="65" class="img-responsive" src="/uploads/{{file}}" alt=""></td>
                <td>{{title}}</td>
                <td>{{status}}</td>
                <td>{{allowComments}}</td>
                <td><a class="btn btn-info" href="/admin/posts/edit/{{id}}">Edit</a></td>
                <td>
                    <form action="/admin/posts/{{id}}?_method=DELETE" method="post">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>